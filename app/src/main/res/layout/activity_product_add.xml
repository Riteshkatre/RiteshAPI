<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6sp"
    tools:context=".Product.ProductAddActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="7dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginHorizontal="6.0sp"
            android:layout_marginTop="10sp"
            android:textColorHint="@color/black"
            app:boxBackgroundColor="#fff4ff"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
            app:hintTextColor="@color/black">

            <ImageView
                android:id="@+id/picimage"
                android:layout_width="170dp"
                android:layout_height="149dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/mlogo" />

            <ImageView
                android:id="@+id/editimage"
                android:layout_width="44dp"
                android:layout_height="36dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="-170dp"
                android:src="@drawable/baseline_mode_edit_24" />


        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>



        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/categoryspiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/subcategoryspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryspinner"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6.0sp"
        android:layout_marginTop="40sp"
        android:hint="Enter Product Name*"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/white"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etproductname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="InvalidId" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6.0sp"
        android:layout_marginTop="10sp"
        android:hint="Enter_Price"
        android:orientation="horizontal"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/white"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etprice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Veg" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/btnswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#1a191e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:text="NonVeg" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6.0sp"
        android:layout_marginTop="30sp"
        android:hint="Enter_Description"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/white"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="InvalidId" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btncancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="220sp"
        android:backgroundTint="#9e9e9e"
        android:padding="10sp"
        android:text="Cancel"
        android:textColor="#fffffb"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180sp"
        android:layout_marginTop="-55sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="#449e47"
        android:padding="10sp"
        android:text="Submit"
        android:textColor="#fffffb"
        android:textSize="20sp" />

</LinearLayout>
