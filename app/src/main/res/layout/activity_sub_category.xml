<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubCategory.SubCategoryActivity"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Data For SubCategory:"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#6726DC"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#605E5E"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/subspinnerDropdown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="1dp"
            android:shadowColor="@color/white">
        </androidx.appcompat.widget.AppCompatSpinner>
        <ImageView
            android:layout_width="52dp"
            android:layout_height="39dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_check_box_outline_blank_24"
            app:tint="#FFFFFF"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#605e6a">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_search_24" />

        <EditText
            android:id="@+id/subsearchbar"
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:hint="search"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/subswap"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subrcv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#605e6a" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <Button
        android:id="@+id/subbtnpluse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:backgroundTint="#6726DC"
        android:textSize="20dp"
        android:layout_gravity="end"/>


</LinearLayout>