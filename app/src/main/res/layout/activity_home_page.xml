<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:orientation="vertical"
    android:background="@color/dark_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/welcome" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="UserName ="
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginStart="95dp"
            />
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="username"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="9dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#B1A5A5"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <Button
            android:id="@+id/category"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="For Category select this" />

        <Button
            android:id="@+id/subcategory"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:text="For SubCategory select this" />

        <Button
            android:id="@+id/productadd"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="190dp"
            android:text="For Catelog select this" />

        <Button
            android:id="@+id/productlist"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="280dp"
            android:text="For Productlist select this" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="160dp"
        android:backgroundTint="#d6a511"
        app:cardCornerRadius="7dp">

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>